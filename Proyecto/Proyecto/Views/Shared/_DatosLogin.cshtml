@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

    <aside class="main-sidebar">
        <section class="sidebar">
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="@Url.Content("~/dist/img/user2-160x160.jpg")" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>  <text>@User.Identity.GetUserName()</text></p>
                    <a href="#"><i class="fa fa-circle text-success"></i> Conectado </a>
                </div>
            </div>

            <ul class="sidebar-menu">

                <li>
                    <a href="@Url.Action( "Index", "Productos")">
                        <i class="fa fa-dashboard"></i> <span>Productos</span> <i class="fa fa-angle-left pull-right"></i>
                    </a>
                </li>

            </ul>

        </section>

    </aside>
    }
}
else
{

    <aside class="main-sidebar">
        <section class="sidebar">
            <div class="user-panel">
                <div class="pull-left info">
                    <a href="#"><i class="fa fa-circle text-success"></i> Desconectado </a>
                </div>
            </div>

            <ul class="sidebar-menu">

                <li>
                    <a href="@Url.Action( "Index", "Productos")">
                        <i class="fa fa-dashboard"></i> <span>Productos</span> <i class="fa fa-angle-left pull-right"></i>
                    </a>
                </li>

            </ul>

        </section>

    </aside>
}

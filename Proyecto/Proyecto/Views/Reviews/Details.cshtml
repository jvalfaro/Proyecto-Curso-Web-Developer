@model Productos.Entities.Producto
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured{
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>&nbsp;</h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action( "Index", "Home")"><i class="fa fa-dashboard"></i> Men&uacute; Principal</a></li>
            <li class="active">Productos</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h2 class="box-title"><i class="fa fa-bell-o text-aqua"></i>&nbsp; Productos</h2>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">
                                <dl class="dl-horizontal">
                                    <dt>
                                        <label>Producto:</label>

                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Title)
                                    </dd>
                                    <dt>
                                        <label>Descripcion:</label>
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Description)
                                    </dd>
                                </dl>
                            </div>
                            <div>
                                <p>
                                    @Html.ActionLink("Crear Detalle", "Create", new { controller = "Reviews", id = Model.Id})
                                </p>
                            </div>
                            <div>
                                <table class="table">
                                    <tr>
                                        <th>
                                            <label>Descripcion:</label>
                                        </th>
                                        <th>
                                            <label>Sku:</label>
                                        </th>
                                        <th></th>
                                    </tr>
                                    @foreach (var item in Model.Reviews)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Comment)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Sku)
                                            </td>
                                            <td>
                                                <input type="submit" value="Eliminar" class="btn btn-default" />
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                            </div><!-- /.col -->
                        </div><!-- /.row -->
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
}

